<div class="row hero jumbotron">
	<div class="gradient">
		<div class="container">
			<div class="col-md-10">
				<h4>Contribute to:</h4>	
				<h1><%= @prompt.headline %></h1>
			</div>
		</div>
	</div>
</div>

<main class="container">
	<div class="row">
		<div class="col-md-8">
			<div class="form-group form-group-lg">
				<%= form_for [@prompt, @contrib] do |f| %>
					<% if @contrib.errors.any? %>
						<% @contrib.errors.full_messages.each do |msg| %>
							<p><%= msg %></p>
						<% end %>
					<% end %>
					<h3>Article Headline<h3>
					<p><%= f.text_field :headline, :class => 'form-control' %></p>
					<h3>Article Body<h3>
					<p><%= f.text_area :body, :class => 'form-control', :rows => 6 %></p>
					<h3>Image URL<h3>	
					<p><%= f.text_field :image_url, :class => 'form-control' %></p>
					<p><%= f.submit "Contribute", :class => 'btn btn-primary' %></p>
				<% end %>
			</div>
		</div>
	</div>
</main>