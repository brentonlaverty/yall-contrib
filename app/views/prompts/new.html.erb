<main class="container">
	<div class="row">
	<% if current_user != nil %>
		<% if current_user.is_admin? %>
			<%= form_for @prompt do |f| %>

				<% if @prompt.errors.any? %>
					<% @prompt.errors.full_messages.each do |msg| %>
						<p><%= msg %></p>
					<% end %>
				<% end %>
				<h1>Publish new prompt</h1>
				<div class="form-group form-group-lg">
					<h3>Article Headline</h3>
					<p><%= f.text_field :headline, :class => 'form-control' %></p>
					<h3>Article Body</h3>
					<p><%= f.text_area :body, :class => 'form-control', :rows => 6%></p>
					<h3>Image URL</h3>	
					<p><%= f.text_field :image_url, :class => 'form-control' %></p>
					<p>
						<%= f.submit "Publish Article", :class => 'btn btn-primary' %>
					</p>
				</div>

			<% end %>
		<% else %>
			<h1>Sorry, you're not an editor!</h1>
		<% end %>
	<% end %>
	</div>
</main>